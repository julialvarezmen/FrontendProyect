<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestor Bancario - Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-university me-2"></i>Gestor Bancario - Dashboard
            </a>
            <a href="/" class="btn btn-outline-light btn-sm">
                <i class="fas fa-home me-1"></i>Homepage
            </a>
        </div>
    </nav>

    <div class="dashboard-container">
        <% if (locals.error) { %>
        <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>
        
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="metric-card">
                    <div class="metric-icon bg-orange">
                        <i class="fas fa-wallet"></i>
                    </div>
                    <div class="metric-content">
                        <h3>$<%= totalBalance.toLocaleString('es-ES', { minimumFractionDigits: 2 }) %></h3>
                        <p>Saldo Total</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="metric-card">
                    <div class="metric-icon bg-blue">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="metric-content">
                        <h3><%= users.length %></h3>
                        <p>Usuarios</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="metric-card">
                    <div class="metric-icon bg-green">
                        <i class="fas fa-credit-card"></i>
                    </div>
                    <div class="metric-content">
                        <h3><%= accounts.length %></h3>
                        <p>Cuentas</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-4">
                <div class="dashboard-card">
                    <div class="card-header">
                        <h5><i class="fas fa-users me-2"></i>Usuarios</h5>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/users" class="mb-3">
                            <div class="mb-2">
                                <input type="text" name="dni" class="form-control form-control-sm" placeholder="DNI *" required>
                            </div>
                            <div class="mb-2">
                                <input type="text" name="name" class="form-control form-control-sm" placeholder="Nombre *" required>
                            </div>
                            <div class="mb-2">
                                <input type="email" name="email" class="form-control form-control-sm" placeholder="Email">
                            </div>
                            <div class="mb-2">
                                <input type="password" name="password" class="form-control form-control-sm" placeholder="Contraseña *" required>
                            </div>
                            <button type="submit" class="btn btn-success btn-sm w-100">Crear Usuario</button>
                        </form>
                        
                        <div class="table-responsive" style="max-height: 200px; overflow-y: auto;">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nombre</th>
                                        <th>DNI</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach(user => { %>
                                    <tr>
                                        <td><%= user.id %></td>
                                        <td><%= user.name %></td>
                                        <td><%= user.dni %></td>
                                        
                                        <td>
                                            <form method="POST" action="/users/<%= user.id %>/delete" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-danger btn-sm"
                                                        onclick="return confirm('¿Eliminar usuario?')">Eliminar</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="dashboard-card">
                    <div class="card-header">
                        <h5><i class="fas fa-credit-card me-2"></i>Cuentas</h5>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/accounts" class="mb-3">
                            <div class="mb-2">
                                <input type="text" name="accountNumber" class="form-control form-control-sm" placeholder="Nº Cuenta *" required>
                            </div>
                            <div class="mb-2">
                                <input type="number" name="balance" class="form-control form-control-sm" placeholder="Saldo *" step="0.01" required>
                            </div>
                            <div class="mb-2">
                                <input type="number" name="userId" class="form-control form-control-sm" placeholder="ID Usuario *" required>
                            </div>
                            <button type="submit" class="btn btn-info btn-sm w-100">Crear Cuenta</button>
                        </form>
                        
                        <div class="table-responsive" style="max-height: 200px; overflow-y: auto;">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nº Cuenta</th>
                                        <th>ID Usuario</th>
                                        <th>Saldo</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% accounts.forEach(account => { %>
                                    <tr>
                                        <td><%= account.id %></td>
                                        <td><%= account.accountNumber %></td>
                                        <td><%= account.userId %></td>
                                        <td>$<%= account.balance.toLocaleString('es-ES', { minimumFractionDigits: 2 }) %></td>
                                        <td>
                                            <form method="POST" action="/accounts/<%= account.id %>/delete" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-danger btn-sm"
                                                        onclick="return confirm('¿Eliminar cuenta?')">Eliminar</button>
                                            </form>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="dashboard-card">
                    <div class="card-header">
                        <h5><i class="fas fa-exchange-alt me-2"></i>Transacciones</h5>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/transactions/deposit" class="mb-3">
                            <h6 class="text-success">Depósito</h6>
                            <div class="mb-2">
                                <input type="number" name="accountId" class="form-control form-control-sm" placeholder="ID Cuenta" required>
                            </div>
                            <div class="mb-2">
                                <input type="number" name="amount" class="form-control form-control-sm" placeholder="Monto" step="0.01" required>
                            </div>
                            <button type="submit" class="btn btn-success btn-sm w-100">Depositar</button>
                        </form>
                        
                        <form method="POST" action="/transactions/withdraw" class="mb-3">
                            <h6 class="text-danger">Retiro</h6>
                            <div class="mb-2">
                                <input type="number" name="accountId" class="form-control form-control-sm" placeholder="ID Cuenta" required>
                            </div>
                            <div class="mb-2">
                                <input type="number" name="amount" class="form-control form-control-sm" placeholder="Monto" step="0.01" required>
                            </div>
                            <button type="submit" class="btn btn-danger btn-sm w-100">Retirar</button>
                        </form>
                        
                        <form method="POST" action="/transactions/transfer">
                            <h6 class="text-primary">Transferencia</h6>
                            <div class="mb-2">
                                <input type="number" name="fromAccountId" class="form-control form-control-sm" placeholder="De Cuenta ID" required>
                            </div>
                            <div class="mb-2">
                                <input type="number" name="toAccountId" class="form-control form-control-sm" placeholder="A Cuenta ID" required>
                            </div>
                            <div class="mb-2">
                                <input type="number" name="amount" class="form-control form-control-sm" placeholder="Monto" step="0.01" required>
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm w-100">Transferir</button>
                        </form>
                    </div>
                </div>
                
                <div class="dashboard-card mt-3">
                    <div class="card-header">
                        <h6><i class="fas fa-history me-2"></i>Últimas Transacciones</h6>
                    </div>
                    <div class="card-body" style="max-height: 150px; overflow-y: auto;">
                        <% transactions.forEach(transaction => { %>
                        <div class="transaction-item">
                            <small class="text-muted">
                                <%= new Date(transaction.date).toLocaleDateString() %>
                            </small>
                            <span class="badge bg-<%= transaction.type === 'DEPOSIT' ? 'success' : transaction.type === 'WITHDRAWAL' ? 'danger' : 'primary' %>">
                                <%= transaction.type %>
                            </span>
                            <span>$<%= transaction.amount %></span>
                        </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>